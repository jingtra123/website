---
interface Props {
  title: string;
  description: string;
  techStack: string[];
  githubUrl?: string;
  liveUrl?: string;
  slug: string;
  status: 'active' | 'completed';
}

const { title, description, techStack, githubUrl, liveUrl, slug, status } = Astro.props;
---

<div class="card p-6 h-full flex flex-col">
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-xl font-bold text-gray-900 flex-1">
      <a href={`/projects/${slug}`} class="hover:text-primary-600 transition-colors">
        {title}
      </a>
    </h3>
    <span
      class={`px-3 py-1 text-xs font-semibold rounded-full ${
        status === 'active' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800'
      }`}
    >
      {status === 'active' ? 'Active' : 'Completed'}
    </span>
  </div>

  <p class="text-gray-600 mb-4 flex-1">{description}</p>

  <div class="mb-4">
    <div class="flex flex-wrap gap-2">
      {techStack.map((tech) => (
        <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded">
          {tech}
        </span>
      ))}
    </div>
  </div>

  <div class="flex items-center gap-3 mt-auto pt-4 border-t border-gray-200">
    <a
      href={`/projects/${slug}`}
      class="text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors"
    >
      View Details â†’
    </a>
    {githubUrl && (
      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="View on GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
      </a>
    )}
    {liveUrl && (
      <a
        href={liveUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 transition-colors"
        aria-label="View live site"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
  </div>
</div>
