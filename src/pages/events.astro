---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Events - PhilaCon Valley"
  description="Join us for hands-on workshops, Collab Labs, and community events in Philadelphia."
>
  <Header />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-600 to-accent-600 text-white py-20">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Events</h1>
        <p class="text-2xl opacity-90">
          Join us for hands-on collaboration, workshops, and community building
        </p>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">What to Expect</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Collaborative Environment</h3>
            <p class="text-gray-600">
              Work on projects together through pair programming and group collaboration.
              Everyone contributes, everyone learns.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Hands-On Learning</h3>
            <p class="text-gray-600">
              No passive lectures. You'll be coding, building, and creating from day one.
              Bring your laptop and get ready to build.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Supportive Community</h3>
            <p class="text-gray-600">
              Everyone is welcome, regardless of experience level. Ask questions, share knowledge,
              and support each other.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Real Projects</h3>
            <p class="text-gray-600">
              Work on projects that matter â€“ community tools, portfolio pieces, and open source
              contributions you can showcase.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Luma Calendar Embed -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <h2 class="text-3xl font-bold mb-8 text-center">Event Calendar</h2>
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex justify-center p-4">
          <iframe
            src="https://luma.com/embed/calendar/cal-KkQjuykLZNrSChl/events"
            width="100%"
            height="600"
            frameborder="0"
            style="border: 1px solid #bfcbda88; border-radius: 4px; max-width: 800px;"
            allowfullscreen=""
            aria-hidden="false"
            tabindex="0"
          ></iframe>
        </div>
        <p class="text-center mt-4 text-gray-600">
          Can't see the calendar? <a href="https://lu.ma/philaconvalley" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-semibold">View on Luma</a>
        </p>
      </div>
    </div>
  </section>

  <!-- Event Types -->
  <section class="section-padding">
    <div class="container-custom">
      <h2 class="text-3xl font-bold mb-8 text-center">Types of Events</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Collab Lab</h3>
          <p class="text-gray-600">
            Monthly hands-on build sessions. Pair program, get code reviews, and work on real projects together.
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Workshops</h3>
          <p class="text-gray-600">
            Focused technical workshops on specific topics like Git, APIs, React, and more.
          </p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Career Sessions</h3>
          <p class="text-gray-600">
            Resume reviews, interview prep, job search strategies, and networking opportunities.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-gradient-to-r from-primary-600 to-accent-600 text-white">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to Join Us?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto opacity-90">
        RSVP for our next event and become part of Philadelphia's thriving tech community.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="https://lu.ma/philaconvalley" external variant="secondary" size="lg">
          View Events on Luma
        </Button>
        <Button href="/join" variant="outline" size="lg" class="!text-white !border-white hover:!bg-white/10">
          Join the Community
        </Button>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
