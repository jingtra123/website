---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { title, description, techStack, githubUrl, liveUrl, contributors, status, date } = project.data;
---

<BaseLayout title={`${title} - PhilaCon Valley Projects`} description={description}>
  <Header />

  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary-600 to-accent-600 text-white py-16">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-4">
          <a href="/projects" class="text-white hover:text-blue-200 transition-colors">
            ‚Üê Back to Projects
          </a>
          <span
            class={`px-3 py-1 text-sm font-semibold rounded-full ${
              status === 'active' ? 'bg-green-500' : 'bg-blue-500'
            }`}
          >
            {status === 'active' ? 'Active' : 'Completed'}
          </span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
        <p class="text-xl opacity-90">{description}</p>
      </div>
    </div>
  </section>

  <!-- Project Details -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <div class="prose prose-lg max-w-none">
              <Content />
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="bg-gray-50 rounded-lg p-6 sticky top-24">
              <h3 class="text-xl font-bold mb-4">Project Info</h3>

              <!-- Tech Stack -->
              <div class="mb-6">
                <h4 class="font-semibold text-gray-700 mb-2">Tech Stack</h4>
                <div class="flex flex-wrap gap-2">
                  {techStack.map((tech) => (
                    <span class="px-3 py-1 bg-white text-gray-700 text-sm font-medium rounded shadow-sm">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Contributors -->
              <div class="mb-6">
                <h4 class="font-semibold text-gray-700 mb-2">Contributors</h4>
                <ul class="space-y-1">
                  {contributors.map((contributor) => (
                    <li class="text-gray-600">{contributor}</li>
                  ))}
                </ul>
              </div>

              <!-- Date -->
              <div class="mb-6">
                <h4 class="font-semibold text-gray-700 mb-2">Last Updated</h4>
                <p class="text-gray-600">
                  {date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </p>
              </div>

              <!-- Links -->
              <div class="space-y-3">
                {githubUrl && (
                  <Button href={githubUrl} external variant="primary" class="w-full">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                    View on GitHub
                  </Button>
                )}
                {liveUrl && (
                  <Button href={liveUrl} external variant="secondary" class="w-full">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    Visit Live Site
                  </Button>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold mb-4">Want to Contribute?</h2>
      <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
        All our projects are open source and welcome contributions. Check out the GitHub repo
        to see open issues and get started!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/join" variant="primary">
          Join the Community
        </Button>
        <Button href="/projects" variant="outline">
          View All Projects
        </Button>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
